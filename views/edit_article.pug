extends layout

block content
    h1 #{title}
    form.col-md-4(method="POST", action="/articles/edit/"+article._id)
        #form-group
            label Title:
            input.form-control(name="title", type="text", value=article.title)
        #form-group
            label Body:
            textarea.form-control(name="body", cols="30", rows="5")= article.body
        #form-group
            label Author:
            input.form-control.disabled(name="author", type="text", value=article.author)
        br
        input.btn.btn-primary(type="submit", value="Submit")
