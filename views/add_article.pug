extends layout

block content
        h1 #{title}
        form.col-md-4(method="POST", action="/articles/add")
                #form-group
                        label Title:
                        input.form-control(name="title", type="text")
                #form-group
                        label Author:
                        input.form-control(name="author", type="text")
                #form-group
                        label Body:
                        textarea.form-control(name="body", cols="30", rows="5")
                br
                input.btn.btn-primary(type="submit", value="Submit")
                